
<%= render 'books/sidebar', user: @user_sidebar, book: @book_sidebar %>

<div class="col-md-8 offset-md-1 py-2">
  <h2>Book detail</h2>
  <table class="table">
    <tr>
      <td>
        <%=attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: 'mb-0' %>
        <p><%= link_to @book.user.name, user_path(@book.user) %></p>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class: "text-white btn btn-success btn-sm" %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "text-white btn btn-danger btn-sm" %>
        <% end %>
      </td>
      
      <td>
      <% if @book.favorited_by?(current_user) %>
        <%= link_to book_favorites_path(@book), method: :delete, class: "like-btn" do %>
          ♥<%= @book.favorites.count %> 
        <% end %>
      <% else %>
        <%= link_to book_favorites_path(@book), method: :post, class: "unlike-btn" do %>
          ♥<%= @book.favorites.count %> 
        <% end %>
      <% end %>
      </td>
      <td><p>コメント数：<%= @book.book_comments.count %></p></td>
    </tr>
  </table>
  
  <table>
    <% @book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%=attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: 'mb-0' %>
        <p><%= book_comment.user.name %></p>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "text-white btn btn-danger btn-sm"%></td>
      <% end %>
    <% end %>
    </tr>
  </table>
  
  <div class="new-comment">
    
  <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
    <%= f.text_area :comment, rows:'5' %>
    <div>
      <%= f.submit "送信" %>
    </div>
  <% end %>
  </div>
</div>




